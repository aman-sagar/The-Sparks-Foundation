<!-- fName, lName, email, balance, dob, mobNo, address-->
<%layout('layouts/boilerplate')%>
    <link rel="stylesheet" href="../stylesheets/showCustomer.css">
    <div class="customers-box">
        <h1>
            <%=customer.fName%>&nbsp;
                <%=customer.lName%>
        </h1>
        <table class="customer-tbl">

            <tr>
                <th>Email:</th>
                <td class="cust-detail">
                    <%=customer.email%>
                </td>
            </tr>
            <tr>
                <th>Balance:</th>
                <td class="cust-detail">
                    <%=customer.balance%>
                </td>
            </tr>
            <tr>
                <th>D.O.B.</th>
                <td class="cust-detail">
                    <%=customer.dob%>
                </td>
            </tr>
            <tr>
                <th>Mobile No.</th>
                <td class="cust-detail">
                    <%=customer.mobNo%>
                </td>
            </tr>
            <tr>
                <th>Address:</th>
                <td class="cust-detail">
                    <%=customer.address%>
                </td>
            </tr>
        </table>

        <form action="/fundstransfer/<%=customer._id%>" method="get">
            <button type="submit">Transfer Money</button>
        </form>
        </ol>
    </div>